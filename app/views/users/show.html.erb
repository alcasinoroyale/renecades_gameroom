<div class="user-profile">
<h1><%= @user.username %>'s Profile</h1>

<h2>User Info</h2>
<div class="user-info">
  <%= @user.bio %><br>
  <%= @user.reward_points %> Reward Points<br>
  Favorite Game: <%= @user.favorite_game %><br>
  Player Rank: <%= @user.rank %><br>
</div>

<h2>Created Games</h2>
<% @user.created_games.each do |game| %>
  <h3><%= link_to game.name, game_path(game) %></h3>
<% end %>

<h2>Played Games</h2>
<% if @user.games.any? %>
  <% @user.games.each do |game| %>
    <h3><%= link_to game.name, game_path(game) %></h3>
  <% end %>
<% else %>
  <h3>You haven't played any games yet.</h3>
<% end %>

<h2>Renecades Players:</h2>
<% @users.each do |user| %>
<h3><%= user.id %>. <%= link_to user.username, user_path(user) %></h3>
<% end %>
</div>
