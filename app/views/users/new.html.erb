<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="new-user">
<h1>Join the Renecades Gameroom</h1>
 <%= form_for @user do |f| %>
  <%= f.label :username, "Username" %><br>
  <%= f.text_field :username %><br><br>

  <%= f.label :email, "Email" %><br>
  <%= f.text_field :email %><br><br>

  <%= f.label :bio, "Bio" %><br>
  <%= f.text_field :bio %><br><br>

  <%= f.label :favorite_game, "Favorite Game" %><br>
  <%= f.text_field :favorite_game %><br><br>

  <%= f.label :password, "Password" %><br>
  <%= f.password_field :password %><br><br>

   <%= f.submit "Create User", class: 'form-text-box' %>
<% end %>
</div>
