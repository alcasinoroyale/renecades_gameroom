<!DOCTYPE html>
<html>
  <head>
    <title>RenecadesGameroom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to "Home", root_path %><br>
        <%= link_to "View Games", games_path %><br>
        <% if !@current_user %>
          <%= link_to "Login", '/login' %>
        <% elsif @current_user %>
          <%= link_to "Logout", '/logout' %>
        <% end %>
        <br>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
